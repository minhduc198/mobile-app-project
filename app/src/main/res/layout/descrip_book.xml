<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="8dp"
    android:background="#FFF">

    <!-- Container chính: chứa 3 dòng thống kê, các nút, và FoldingCell -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <!-- Card chứa 3 dòng thống kê -->
        <LinearLayout
            android:id="@+id/stats_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <!-- Favourite -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/heart"
                    android:contentDescription="Favourite icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Favourite"
                    android:textSize="16sp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:textSize="16sp"
                    android:textColor="#222222" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#E0E0E0"/>

            <!-- Currently Reading -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/curreading"
                    android:contentDescription="Currently reading icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Currently Reading"
                    android:textSize="16sp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/number_view1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textSize="16sp"
                    android:textColor="#222222" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="#E0E0E0"/>

            <!-- Have Read -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/haveread"
                    android:contentDescription="Have read icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Have Read"
                    android:textSize="16sp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/number_view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1220"
                    android:textSize="16sp"
                    android:textColor="#222222" />
            </LinearLayout>

        </LinearLayout> <!-- end stats_card -->

        <!-- Nút hành động: Read + Heart -->
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="18dp">

            <Button
                android:id="@+id/active_button"
                android:layout_width="140dp"
                android:layout_height="48dp"
                android:text="Read"
                android:textAllCaps="false"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#007AFF"
                android:textColor="#FFFFFF"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/heart1"
                android:contentDescription="favorite button"
                android:background="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="8dp" />
        </LinearLayout>

        <!-- FoldingCell -->
        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/folding_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:elevation="3dp">


            <!-- Title view (visible) -->
            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_view_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book Description"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#222222"
                        android:maxLines="8"
                        android:ellipsize="end" />

                    <Button
                        android:id="@+id/btn_toggle_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show More"
                        android:textSize="13sp"
                        android:textColor="#1976D2"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="6dp"
                        android:padding="0dp"
                        android:layout_gravity="end" />
                </LinearLayout>
            </FrameLayout>

        </com.ramotion.foldingcell.FoldingCell>

    </LinearLayout> <!-- end container -->

</RelativeLayout>
