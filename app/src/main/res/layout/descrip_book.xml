<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_favour">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:src="@drawable/heart" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:id="@+id/number_view"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_favour1"
            android:layout_below="@id/container_favour">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/icon1"
                android:src="@drawable/curreading"
                android:layout_margin="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currently Reading"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:id="@+id/number_view1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/container_favour2"
            android:layout_below="@id/container_favour1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/icon2"
                android:src="@drawable/haveread"
                android:layout_margin="3dp"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Have Read"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:id="@+id/number_view2"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:id="@+id/buttons"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/active_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="read"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/heart1"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/active_button"
            android:layout_alignTop="@id/active_button"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>

    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttons"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:text="Expanded"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="Not Expanded"/>
        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>
</RelativeLayout>