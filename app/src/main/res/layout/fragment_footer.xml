<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Around the Library"
                android:textColor="#333333"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here'''s what'''s happened over the last 28 days. More recent changes."
                android:textColor="#666666"
                android:textSize="14sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="3">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center_horizontal" android:orientation="vertical" android:padding="8dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:src="@drawable/chart_red"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="41,711,544" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UNIQUE VISITORS"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center_horizontal" android:orientation="vertical" android:padding="8dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:src="@drawable/chart_green"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="218,919" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NEW MEMBERS"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center_horizontal" android:orientation="vertical" android:padding="8dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:src="@drawable/chart_blue"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="626,894" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CATALOG EDITS"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center_horizontal" android:orientation="vertical" android:padding="8dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:src="@drawable/chart_orange"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3,167" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LISTS CREATED"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:gravity="center_horizontal" android:orientation="vertical" android:padding="8dp">
                    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:src="@drawable/chart_dark_green"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="277,052" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="EBOOKS BORROWED"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>

        <!-- "ABOUT THE PROJECT" SECTION   -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                style="@style/AboutProjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/about_project_title" />

            <!-- Two-column layout for the content -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <!-- Left Column: Description -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/about_para1"
                        style="@style/AboutProjectParagraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/about_project_para1" />

                    <TextView
                        android:id="@+id/about_para2"
                        style="@style/AboutProjectParagraph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_project_para2" />

                </LinearLayout>

                <!-- Right Column: Latest Blog Posts -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/latest_blog_title"
                        style="@style/BlogLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/latest_blog_posts_title" />

                    <TextView
                        android:id="@+id/blog_post_1"
                        style="@style/BlogLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blog_post_1" />

                    <TextView
                        android:id="@+id/blog_post_2"
                        style="@style/BlogLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blog_post_2" />

                    <TextView
                        android:id="@+id/blog_post_3"
                        style="@style/BlogLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blog_post_3" />
                </LinearLayout>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2E7C9"
            android:padding="16dp">

            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="@string/h1" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="8dp" android:layout_marginTop="16dp"/>
            <TextView android:id="@+id/linkVision" android:text="@string/link_vison" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkVolunteer"  android:text="@string/link_volunteer" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkPartnerWithUs" android:text="@string/link_partner_with_us" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkCarrers" android:text="@string/link_careers" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkBlog" android:text="@string/link_blog" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkTermsOfService"  android:text="@string/link_terms_of_service" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/linkDonate" android:text="@string/link_donate" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <!-- Discover -->
            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="12dp" android:text="@string/h2" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="8dp"/>
            <TextView android:text="@string/link_home" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_books" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_authors" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_subjects" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_collections" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_advanced_search" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_return_to_top" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <!-- Develop -->
            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="12dp" android:text="@string/h3" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="8dp"/>
            <TextView android:text="@string/link_developer_center" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_api_documentation" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_bulk_data_dumps" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_writing_bots" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <!-- Help -->
            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="12dp" android:text="@string/h4" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="8dp"/>
            <TextView android:text="@string/link_help_center" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_contact_us" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_suggesting_edits" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_add_a_book" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_release_notes" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <!-- Languages -->
            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="12dp" android:text="@string/h5" android:textStyle="bold" android:textSize="16sp" android:paddingBottom="8dp"/>
            <TextView android:text="@string/link_english" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_deutsch" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_espa_ol" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_fran_ais" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_italiano" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_chinese" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:text="@string/link_japanese" style="@style/FooterLink" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <!-- Bottom note -->
            <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginTop="5dp" android:text="@string/note" android:textSize="12sp" android:textColor="#666"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
